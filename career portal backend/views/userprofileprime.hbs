<!DOCTYPE html>
<html>
<head>
    <title>Profile</title>
    {{> userhead}}
</head>
<body>
<div class="container">
    <div class="page-header text-center">
        <h1>Prime User Profile</h1>
    </div>

    <div class="well">
        <p><strong>User ID</strong>: {{ user.userId }}</p>
        <p><strong>Prime user since</strong>: {{ prime.signUpDate }}</p>
        <p><strong>Email</strong>: {{ user.email }}</p>
        <p><strong>Payment Type</strong>: {{ user.autoOrManual }}</p>
        <p><strong>Payment Method</strong>: {{ user.paymentMethod }}</p>
        <p><strong>Credit Number</strong>: {{ user.creditNo }}</p>
        <p><strong>Checking Number</strong>: {{ user.checkingNo }}</p>
        <p><strong>Monthly fee</strong>: {{ user.monthlyFee }}</p>
        <p><strong>Account Balance</strong>: {{ user.accountBalance }}</p>
        <p><strong>Recovery Answer</strong>: {{ user.accountRecoveryAnswer }}</p>
        <p><strong>Job Seeker Category</strong>: {{ jobseeker.category }}</p>
        <p><strong>Number of jobs applied</strong>: {{ prime.numberOfJobsApplied }}</p>
        <p><strong>About me</strong>: {{ jobseeker.profileDescription }}</p>
        <td>
            <!-- Trigger the modal with a button -->
            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#categoryModal">Change Category</button>

            <!-- Modal -->
            <div id="categoryModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Choose Category</h4>
                        </div>
                        <div class="modal-body">
                            <form action="/changeCategory" method="post">
                                <div class="form-group">
                                    <label>What type of account would you like?:</label><br>
                                    <input type="radio" name="accounttype" id="basic" value="Basic">
                                    <label for="gold">Basic</label><br>
                                    <input type="radio" name="accounttype" id="prime" value="Prime">
                                    <label for="gold">Gold</label><br>
                                </div>
                                <button type="submit" class="btn btn-info">Change</button>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </td>
        <td><a href="/action/delete/{{ user.userId }}">Delete profile<span class="glyphicon glyphicon-trash"></span></a></td>
    </div>
</div>
</body>
</html>
