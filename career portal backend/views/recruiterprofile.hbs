<!DOCTYPE html>
<html>
  <head>
    <title>Profile</title>
    {{> recruiterhead}}
  </head>
  <body>
    <div class="container">
      <div class="page-header text-center">
        <h1>Recruiter Profile</h1>
      </div>
      <div class="well">
        <h2>Recruiter Information</h2>
        <p><strong>User ID</strong>: {{ user.userId }}</p>
        <p><strong>Email</strong>: {{ user.email }}</p>
        <p><strong>Payment Type</strong>: {{ user.autoOrManual }}</p>
        <p><strong>Payment Method</strong>: {{ user.paymentMethod }}</p>
        <p><strong>Credit Number</strong>: {{ user.creditNo }}</p>
        <p><strong>Checking Number</strong>: {{ user.checkingNo }}</p>
          <p><strong>Monthly fee</strong>: {{ user.monthlyFee }}</p>
          <p><strong>Account Balance</strong>: {{ user.accountBalance }}</p>
        <p><strong>Recovery Answer</strong>: {{ user.accountRecoveryAnswer }}</p>
        <p><strong>Phone Number</strong>: {{ recruiter.phoneNo }}</p>
        <p><strong>Recruiter Category</strong>: {{ recruiter.employerCategory }}</p>
        <p><strong>Number of Jobs Posted</strong>: {{ recruiter.jobPostedCount }}</p>
          <td>
              <!-- Trigger the modal with a button -->
              <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#recruiterCategoryModal">Change Category</button>
              <!-- Modal -->
              <div id="recruiterCategoryModal" class="modal fade" role="dialog">
                  <div class="modal-dialog">
                      <!-- Modal content-->
                      <div class="modal-content">
                          <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <h4 class="modal-title">Choose Category</h4>
                          </div>
                          <div class="modal-body">
                              <form action="/changeCategoryRecruiter" method="post">
                                  <div class="form-group">
                                      <label>What type of account would you like?:</label><br>
                                      <input type="radio" name="accounttype" id="gold" value="Gold">
                                      <label for="gold">Gold</label><br>
                                      <input type="radio" name="accounttype" id="prime" value="Prime">
                                      <label for="prime">Prime</label><br>
                                  </div>
                                  <button type="submit" class="btn btn-info">Change</button>
                              </form>
                          </div>
                          <div class="modal-footer">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          </div>
                      </div>
                  </div>
              </div>
          </td>
          <td><a href="/action/delete/{{ recruiter.userId }}">Delete profile<span class="glyphicon glyphicon-trash"></span></a></td>
      </div>

    </div>
  </body>
</html>
