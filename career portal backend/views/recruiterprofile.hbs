<!DOCTYPE html>
<html>
  <head>
    <title>Profile</title>
    {{> recruiterhead}}
  </head>
  <body>
    <div class="container">
      <div class="page-header text-center">
        <h1>Recruiter Profile</h1>
      </div>
      <div class="well">
        <p><strong>User ID</strong>: {{ user.userId }}</p>
        <p><strong>Email</strong>: {{ user.email }}</p>
        <p><strong>Payment Type</strong>: {{ user.autoOrManual }}</p>
        <p><strong>Payment Method</strong>: {{ user.paymentMethod }}</p>
        <p><strong>Credit Number</strong>: {{ user.creditNo }}</p>
        <p><strong>Checking Number</strong>: {{ user.checkingNo }}</p>
        <p><strong>Recovery Answer</strong>: {{ user.accountRecoveryAnswer }}</p>
        <p><strong>Phone Number</strong>: {{ recruiter.phoneNo }}</p>
        <p><strong>Recruiter Category</strong>: {{ recruiter.employerCategory }}</p>
        <p><strong>Number of Jobs Posted</strong>: {{ recruiter.jobPostedCount }}</p>
      </div>
      {{#each jobs}}
        <div class="row">
          <div class="well">
            <p><strong>jobId</strong>: {{ jobId }}</p>
        <p><strong>employerId</strong>: {{ employerId }}</p>
        <p><strong>jobTitle</strong>: {{ jobTitle }}</p>
        <p><strong>Description</strong>: {{ description }}</p>
        <p><strong>Number of Employees Needed</strong>: {{ numberEmployeesNeeded }}</p>
        <p><strong>Date Posted</strong>: {{ datePosted }}</p>
        <p><strong>Status</strong>: {{ status }}</p>
          </div>
        </div>
      {{/each}}

    </div>
  </body>
</html>
