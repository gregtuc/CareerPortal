<!DOCTYPE html>
<html>
<head>
    <title>Application Administration</title>
    {{> head}}
</head>
<body>
<div class="container">
    <div class="page-header text-center">
        <h1>Application Administration</h1>
        <a href="/logout" class="btn btn-info">Logout</a>
        <a href="/admin" class="btn btn-info">Manage Users</a>
        <a href="/manage/jobs" class="btn btn-info">Manage Jobs</a>
    </div>
    <p></p>
    <table class="table table-striped table-hover">
        <thead>
        <th>Application ID</th>
        <th>Job ID</th>
        <th>User ID</th>
        <th>Title</th>
        <th>Body</th>
        <th>Status</th>
        <th>Date Sent</th>

        </thead>
        <tbody>
        {{#each jobs}}
            <tr>
                <td>{{ this.applicationId }}</td>
                <td>{{ this.jobId }}</td>
                <td>{{ this.userId }}</td>
                <td>{{ this.title }}</td>
                <td>{{ this.body }}</td>
                <td>{{ this.status }}</td>
                <td>{{ this.dateSent }}</td>

                <td>
                    <div class="btn-group">
                        <a href="/action/deleteapplications/{{this.applicationId}}"><button class="btn" type="button">Delete</button> </a>

                    </div>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>


</body>
</html>
